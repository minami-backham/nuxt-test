{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true, // 型チェックを厳密にする
    "baseUrl": ".", // 相対パスの基準ディレクトリ
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "vue": ["./node_modules/vue"]
    },
    "skipLibCheck": true, // 外部ライブラリの型チェックをスキップ
    "moduleResolution": "node"
  }
}
